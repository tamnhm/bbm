@section scripts_ko{

    @Scripts.Render("~/module/langdingpage")
    <script>
        $(document).ready(function () {
            (new Landingpage.mvLandingpage().Start())

        });

    </script>
}

<div class="row-fluid">
    <div class="span12">
        <div class="box box-color box-bordered">
            <div class="box-title">
                <h3>
                    <i class="icon-table"></i>
                </h3>
            </div>
            <div class="box-content nopadding">
                <div class='form-horizontal form-bordered' data-bind="with:mLandingpage">
                    <div class="control-group">
                        <div class="form-actions actionsz">
                            <button data-bind="click:$parent.submit" class="btn btn-primary"><i class="icon-save"></i></button>

                        </div>
                    </div>
                    <div class="control-group">
                        <h4 class="control-label">Site</h4>
                        <div class="controls">
                            <div class="input-append">
                                <select class="input-xlarge" data-bind="options:$parent.Dropdownlist,optionsValue: 'maloai', optionsText: 'tenloai',value:$parent.selected"></select>
                            </div>
                        </div>
                    </div>

                    <div class="control-group">
                        <h4 class="control-label">Thông tin chung</h4>
                    </div>
                    <div class="control-group">
                        <label for="textfield" class="control-label"><b>Tên Site</b></label>
                        <div class="controls">
                            <input type="text" data-bind="value:tenloai" class="input-xxxlarge">
                        </div>
                    </div>
                    <div class="control-group">
                        <h4 class="control-label">SEO</h4>
                    </div>
                    <div class="control-group">
                        <label for="textfield" class="control-label"><b>Title</b></label>
                        <div class="controls">
                            <input type="text" class="input-xxxlarge" data-bind="value:title">

                        </div>
                    </div>
                    <div class="control-group">
                        <label for="textfield" class="control-label"><b>Description</b></label>
                        <div class="controls">

                            <textarea rows="5" data-bind="value:metadescription" class="input-xxxlarge"></textarea>
                        </div>
                    </div>
                    <div class="control-group">
                        <label for="textfield" class="control-label"><b>Key word</b></label>
                        <div class="controls">
                            <input type="text" class="input-xxxlarge" data-bind="value:metakeywords">

                        </div>

                        <div class="control-group">
                            <div class="form-actions actionsz">
                                <button data-bind="click:$parent.submit" class="btn btn-primary"><i class="icon-save"></i></button>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>